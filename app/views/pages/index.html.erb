<script type='text/template' id='user-template'>
  <h2>Create User</h2>
  <form id='create-user-form' action='#'>

    <label for='name'>Name: </label>
    <input type='text' id='name' autofocus='true'>

    <button>Create</button>
  </form>
</script>

<script type='text/template' id='users-list-template'>
  <h2>List of Users</h2>
    <ul>
      {{#each users}}
        <li>{{name}}</li>
      {{/each}}
    </ul>
</script>

<script type='text/template' id='airplane-template'>
  <h2>Create Airplane</h2>
  <form id='create-airplane-form' action='#'>

    <label for='name'>Name: </label>
    <input type='text' id='name'>

    <label for='row'>Row: </label>
    <input type='number' id='row'>

    <label for='column'>Column: </label>
    <input type='number' id='column'>

    <button>Create</button>
  </form>
</script>

<script type='text/template' id='airplanes-list-template'>
  <h2> List of Airplanes </h2>
    <ul>
      {{#each airplanes}}
        <li>{{name}}</li>
        <li>{{row}}</li>
        <li>{{column}}</li>
      {{/each}}
    </ul>
</script>

<script type='text/template' id='flight-template'>
  <h2>Create Flight</h2>
  <form id="create-flight-form" action="#">

    <label for="name">Name: </label>
    <input type="text" id="name">

    <label for="airplane">Airplane: </label>
    <select name="airplane">
      {{#each airplanes}}
        <option value='{{id}}'>{{name}}</option>
      {{/each}}
    </select>

    <label for="origin">Origin: </label>
    <input type="text" id="origin">

    <label for="destination">Destination: </label>
    <input type="text" id="destination">

    <label for="origin_date">Origin Time: </label>
    <input type="datetime-local" id="origin_date">

    <label for="destination_date">Destination Time: </label>
    <input type="datetime-local" id="destination_date">

    <button>Create</button>
  </form>
</script>

<script type='text/template' id='flights-list-template'>
  <h2>List of Flights</h2>
  <ul>
    {{#each flights}}
      <li>{{name}}</li>
      <ul>
        <li>{{origin}}</li>
        <li>{{destination}}</li>
      </ul>
    {{/each}}
  </ul>
</script>

<script type='text/template' id='reservation-template'>
  <h2>Create Reservation</h2>

  <label for="user">Name: </label>
  <select name="user">
    <%= @users.each do |user| %>
      <option value='<%= user.id %>'><%= user.name %></option>
    <% end %>
  </select>

  <label for="flight">Flight: </label>
  <select name="flight">
    <%= @flights.each do |flight| %>
      <option value='<%= flight.id %>'><%= flight.name %></option>
    <% end %>
  </select>

  <div id='seat-grid'>
    <% @flight.airplane.rows.times do |row| %>
      <% @flight.airplane.columns.times do |column| %>
        <div class='seat'><%= column %> - <%= row %></div>
      <% end %>
      <br>
    <% end %>
  </div>
</script>

